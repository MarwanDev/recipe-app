<h1>New recipe food</h1>

<%= form_with(model: @recipe_food, url: user_recipe_recipe_foods_path(current_user, @recipe)) do |form| %>
  <% if @recipe_food.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@recipe_food.errors.count, "error") %> prohibited this recipe_food from being saved:</h2>

      <ul>
        <% @recipe_food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= form.label :food_id, 'Food' %>
    <%= form.collection_select :food_id, Food.order(:name), :id, :name, required: true %>
  </div>

  <br/>
  <div>
    <%= form.label :quantity, style: "display: block" %>
    <%= form.text_field :quantity %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>


<br>

<div>
  <%= link_to "Back to recipe", user_recipe_path(current_user, @recipe) %>
</div>
