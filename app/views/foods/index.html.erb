<p style="color: green"><%= notice %></p>

<div class="all-buttons">
  <button>
    <%= link_to "New food", new_user_food_path(current_user) %>
  </button>
</div>

<h1>Foods</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Meaurement Unit</th>
      <th>Unit Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>

  <% @foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td> <%= food.meaurement_unit %></td>
      <td><%= food.price %></td>
      <% if food.user.id == current_user.id %>
        <td><%= button_to "Delete", food, method: :delete%>
      <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
